{
  "name": "fixspotify",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run build:server:watch\"",
    "dev:client": "vite build --mode development --watch",
    "dev:server": "nodemon dist/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --mode production",
    "build:server": "tsc",
    "build:server:watch": "tsc -w",
    "start": "node dist/index.js",
    "format": "npm run format:prettier && npm run format:md",
    "format:prettier": "prettier --write \"src/**/*.ts\" \"client/**/*.{ts,css,html}\" \"**/*.md\"",
    "format:check": "npm run format:check:prettier && npm run format:check:md",
    "format:check:prettier": "prettier --check \"src/**/*.ts\" \"client/**/*.{ts,css,html}\" \"**/*.md\"",
    "format:check:md": "prettier --check \"**/*.md\"",
    "format:md": "prettier --write \"**/*.md\"",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "eslint \"src/**/*.ts\" \"client/**/*.ts\"",
    "lint:fix": "npm run lint:fix:ts && npm run lint:fix:md",
    "lint:fix:ts": "eslint \"src/**/*.ts\" \"client/**/*.ts\" --fix",
    "lint:fix:md": "markdownlint-cli2 --fix \"**/*.md\" \"!node_modules\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@distube/ytsr": "^2.0.4",
    "@gurrrrrrett3/protocol": "^1.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0",
    "spotify-api.js": "^9.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.3",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "colorthief": "^2.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "markdownlint-cli2": "^0.19.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.7.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.3"
  }
}
